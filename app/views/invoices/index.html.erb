<% @page_title = "Invoice" %>

<%= link_to("<< Back to Menu", {:controller => 'accounts', :action => 'index'}, :class => 'back-link') %>

<div class="accounts index">
  <h2>Invoices</h2>

  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Invoice", {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@invoices.size, 'invoices') %> found</div>
  <table class="table table-striped table-bordered table-condensed" summary="Invoice list">
    <tr class="header">
      <th>name</th>
      <th>description</th>
      <th>invoiceno</th>
      <th>ammount</th>
      <th>Actions</th>
    </tr>
    <% @invoices.each do |invoice| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= invoice.name %></td>
      <td><%= invoice.description %></td>
      <td><%= invoice.invoiceno %></td>
      <td><%= invoice.ammount %></td>
      
      
      <td class="actions">
        
        <%= link_to("Show", {:action => 'show', :id => invoice.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => invoice.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => invoice.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
