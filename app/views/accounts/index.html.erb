<% @page_title = "Complaints" %>

<%= link_to("<< Back to Menu", {:controller => 'complaint', :action => 'index'}, :class => 'back-link') %>

<div class="accounts index">
  <h2>Accounts</h2>

  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Accounts", {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@accounts.size, 'accounts') %> found</div>
  <table class="table table-striped table-bordered table-condensed" summary="Accounts list">
    <tr class="header">
      <th>company</th>
      <th>address</th>
      <th>mobile</th>
      <th>industry</th>
      <th>county</th>
      <th>Actions</th>
    </tr>
    <% @accounts.each do |account| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= account.company %></td>
      <td><%= account.address %></td>
      <td><%= account.mobile %></td>
      <td><%= account.industry %></td>
      <td><%= account.county %></td>
      
      <td class="actions">
        
        <%= link_to("Show", {:action => 'show', :id => account.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => account.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => account.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
