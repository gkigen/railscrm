<% @page_title = "Contacts" %>

<%= link_to("<< Back to Menu", {:controller => 'accounts', :action => 'index'}, :class => 'back-link') %>

<div class="accounts index">
  <h2>Accounts</h2>

  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Accounts", {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@contacts.size, 'contact') %> found</div>
  <table class="table table-striped table-bordered table-condensed" summary="contact list">
    <tr class="header">
      <th>company</th>
      <th>firstname</th>
      <th>lastname</th>
      <th>address</th>
      <th>email</th>
      <th>mobile</th>
      <th>industry</th>
      <th>leadsource</th>
      <th>county</th>
      <th>Actions</th>
    </tr>
    <% @contacts.each do |contact| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= contact.company %></td>
       <td><%= contact.firstname %></td>
        <td><%= contact.lastname %></td>
      <td><%= contact.address %></td>
      <td><%= contact.email %></td>
      <td><%= contact.mobile %></td>
      <td><%= contact.industry %></td>
      <td><%= contact.leadsource %></td>
      <td><%= contact.county %></td>
      
      <td class="actions">
        
        <%= link_to("Show", {:action => 'show', :id => contact.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => contact.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => contact.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
