<% @page_title = "Complaints" %>

<%= link_to("<< Back to Menu", {:controller => 'complaints', :action => 'index'}, :class => 'back-link') %>

<div class="accounts index">
  <h2>Complaint</h2>

  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Complaint", {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@complaints.size, 'cases') %> found</div>
  <table class="table table-striped table-bordered table-condensed" summary="complaints list">
    <tr class="header">
      <th>company</th>
      <th>state</th>
      <th>mobile</th>
       <th>Actions</th>
    </tr>
    <% @complaints.each do |complaint| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= complaint.company %></td>
      <td><%= complaint.state %></td>
      <td><%= complaint.handledby %></td>
      <td class="actions">
        
        <%= link_to("Show", {:action => 'show', :id =>complaint.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => complaint.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id =>complaint.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
